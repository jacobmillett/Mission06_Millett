@model EnterNewMovie


<h2>Are you sure that you would like to delete this movie?</h2>
<h3>@Model.Title, @Model.Year</h3>
<form asp-controller="Home" asp-action="Delete" method="post">
    <input type="hidden" asp-for="MovieId" />
    <button type="submit">Yes, Delete</button>
    <a class="btn btn-dark" asp-controller="Home" asp-action="MovieList">No, Cancel</a>
</form>